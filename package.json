{
	"name": "scrt-link-v2",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "npx svelte-sitemap --out-dir .vercel/output/static --domain https://scrt.link",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"inlang:machine-translate": "npx @inlang/cli machine translate --project ./project.inlang",
		"inlang:lint": "npx @inlang/cli lint --project ./project.inlang",
		"inlang:editor": "npx @inlang/cli open editor",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@eslint/js": "^9.21.0",
		"@playwright/test": "^1.50.1",
		"@poppanator/sveltekit-svg": "^5.0.0",
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@sveltejs/kit": "^2.17.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/postcss": "^4.0.0",
		"@types/grecaptcha": "^3.0.9",
		"@vitest/browser": "^3.0.1",
		"bits-ui": "^0.22.0",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^2.46.1",
		"formsnap": "1.0.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lucide-svelte": "^0.469.0",
		"mdsvex": "^0.11.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.20.5",
		"svelte-check": "^4.1.1",
		"svelte-sitemap": "^2.7.0",
		"sveltekit-rate-limiter": "^0.6.1",
		"sveltekit-superforms": "^2.22.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^5.4.11",
		"vitest": "^3.0.1",
		"zod": "^3.24.1"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.741.0",
		"@aws-sdk/s3-presigned-post": "^3.741.0",
		"@aws-sdk/s3-request-presigner": "^3.741.0",
		"@inlang/paraglide-sveltekit": "^0.15.5",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.6",
		"arctic": "^2.3.3",
		"axios": "^1.7.9",
		"axios-retry": "^4.5.0",
		"drizzle-orm": "^0.38.3",
		"drizzle-zod": "^0.6.1",
		"jwt-decode": "^4.0.0",
		"mode-watcher": "^0.5.0",
		"postgres": "^3.4.5",
		"pretty-bytes": "^6.1.1",
		"resend": "^4.1.1",
		"runed": "^0.23.3",
		"svelte-email-tailwind": "^2.0.1",
		"svelte-exmarkdown": "^4.0.2",
		"svelte-typewriter": "^3.2.3"
	}
}
