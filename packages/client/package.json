{
	"name": "@scrt-link/client",
	"version": "0.0.8",
	"description": "Client module for scrt.link",
	"keywords": [
		"scrt.link",
		"encryption",
		"security"
	],
	"homepage": "https://github.com/stophecom/scrt-link-v2#readme",
	"bugs": {
		"url": "https://github.com/stophecom/scrt-link-v2/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stophecom/scrt-link-v2.git"
	},
	"license": "MIT",
	"author": "stophe",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"tsup": {
		"noExternal": [
			"@scrt-link/core"
		]
	},
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"dev": "tsup src/index.ts --format cjs,esm --dts --watch",
		"lint": "eslint .",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"@scrt-link/core": "workspace:*"
	}
}
